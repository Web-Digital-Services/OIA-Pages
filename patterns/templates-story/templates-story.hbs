{{> components-main-nav }}

<section class="hero no-bottom">
    <div class="grid-container">
        <div class="grid-x grid-margin-x align-center">
            <div class="cell large-9 small-12">
                <h1 class="h5">Share Your Story</h1>

            </div>
        </div>
    </div>
</section>

<div class="grid-x align-middle align-stretch img-caption">
    <div class="cell small-12 medium-1">
    </div>
    <div class="cell small-12 medium-2 align-middle text-center">
        <p class="caption">Your Gift Matters</p>
    </div>
    <div class="cell small-12 medium-9">
        <img src="../../images/story.jpg" alt="adorable pup">
    </div>
</div>

<div class="grid-container">
    <div class="grid-x grid-margin-x">
        <main class="cell small-12 medium-7 large-8">
            <p class="h4">I would like to share my story:</p>

            <form>
                <label>Name
                    <input type="text" placeholder="Enter your name">
                </label>

                <label>Email
                    <input type="text" placeholder="Enter email">
                </label>

                <label>
                    We want to hear your story
                    <textarea placeholder="How has UTHealth affected your life?"></textarea>
                </label>

                <p><a class="button">Submit</a></p>

            </form>
        </main>
        <aside class="small-12 medium-5 large-4">
            {{> components-sidecar-default }}
        </aside>
    </div>
</div>

{{> components-footer }}